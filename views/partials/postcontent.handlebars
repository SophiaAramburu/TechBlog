<div class="card m-4">
  <header class="card-header">
    <h2 class="card-header-title is-centered">
      {{title}}
    </h2>
  </header>
  <div class="card-content">
    <div class="content">
      {{content}}
      <br>
      <time datetime="2016-1-1"></time>
      <p class="card-text post-author">Posted by <span class="post-username">{{user.username}}</span> on {{format_date created_at}}</p>
    </div>
  </div>
</div>